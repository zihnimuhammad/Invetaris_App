<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar_laporan_masuk"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_white"
            android:background="@color/colorPrimary"
            android:onClick="backtoHome"/>
        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="Laporan ditugaskan" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar_laporan_masuk">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perbaikan Barang "
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_medium"
                />
            <EditText
                android:id="@+id/judul_tugas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Laporan"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_semi_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kode_laporan"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="13sp"
                android:textColor="@color/colorAccent"
                android:text="@string/kode_laporan"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="131dp"
                android:layout_height="15dp"
                android:layout_below="@id/kode_laporan"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:text="Lihat rincian laporan"
                android:textSize="11sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="#fff"
                android:background="@drawable/bg_button_biru"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/shadow"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petugas Perbaikan"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Michael Tom - 488018927"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status Perbaikan"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Selesai"
            android:textColor="@color/colorPrimary"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

</RelativeLayout>